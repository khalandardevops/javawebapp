pipeline {
    agent any
    
    environment {
             buildNumber = BUILD_NUMBER
        }

    /*tools {
        // Install the Maven version configured as "M3" and add it to the path.
        maven "M3"
    }*/

    stages {
        stage('Checkout') {
            steps {
                // Get some code from a GitHub repository
                git branch: 'main', credentialsId: 'Git_Cred', url: 'https://github.com/khalandardevops/javawebapp.git'
                }
                }
        stage('Build') {
            steps {
                // Run Maven on a Unix agent.
                sh "mvn clean package"
            }
        }
        stage('Build Docker Image') {
            steps {                
                sh "docker build -t mohdkhalandar/javaewbappdocker:${buildNumber} ."
            }
        }
        /*stage('Push DockerImage to Docker Hub') {
            steps {  
                docker login -u mohdkhalandar -p 
                docker push mohdkhalandar/javaewbappdocker:${buildNumber}
            }
        }*/
        
    }
}
